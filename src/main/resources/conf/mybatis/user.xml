<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.form.model.User">
    <select id="getById" parameterType="int" resultType="User">
          select ID,COMPANY_ID as companyId,FIRST_NAME as firstName,MIDDLE_INITIAL as middleInital,LAST_NAME as lastName,TITLE,STATUS,TYPE,FP_LOGIN_ID as userId,FP_PASSWORD as password,EMAIL from fp_company_user  where id=#{id}
    </select>
    <insert id="save" parameterType="User">
        insert into fp_company_user (ID,COMPANY_ID,FIRST_NAME,MIDDLE_INITIAL,LAST_NAME,TITLE,STATUS,TYPE,FP_LOGIN_ID,FP_PASSWORD,EMAIL)
        values (#{id},#{companyId},#{firstName},#{middleInital},#{lastName},#{title},#{status},#{type},#{userId},#{password},#{email})
    </insert>
    <update id="update" parameterType="User">
        update fp_company_user set
            COMPANY_ID=#{companyId},
            FIRST_NAME=#{firstName},
            MIDDLE_INITIAL=#{middleInital},
            LAST_NAME =#{lastName},
            TITLE =#{title},
            STATUS =#{status},
            TYPE =#{type},
            FP_LOGIN_ID =#{userId},
            FP_PASSWORD =#{password},
            EMAIL =#{email}
            where id=#{id}
    </update>
    <delete id="delete" parameterType="int">
            delete from fp_company_user where id = #{id}
    </delete>
    <select id="queryByPage" parameterType="QueryParams" resultType="User">
        select * from fp_company_user
        limit #{paging.startRecord},#{paging.pageSize}
    </select>
    <select id="queryByPage_count" parameterType="QueryParams" resultType="int">
        select count(*) from fp_company_user
    </select>
</mapper>